<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".Chats">

    <!--    App bar top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_back">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:fontFamily="@font/pmedium"
            android:textSize="16dp"
            android:textColor="@color/primary"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <!--Akhir App Bar Top-->

    <!--Awal Pesan-->

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:src="@drawable/user1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bu Inem Shop"
                android:textSize="14sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4, September 2020"
                android:textSize="12sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/body"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/stroke">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@drawable/tombolkanan"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:src="@drawable/user2"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gethuk Trio 45"
                android:textSize="14sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2, September 2020"
                android:textSize="12sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/body"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/stroke">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@drawable/tombolkanan"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="324dp"
        android:layout_height="92dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="24dp"
            android:layout_gravity="center"
            android:src="@drawable/user1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cak Dhikin"
                android:textSize="14sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/primary_text"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1, September 2020"
                android:textSize="12sp"
                android:fontFamily="@font/pmedium"
                android:textColor="@color/body"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:background="@drawable/stroke">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:src="@drawable/tombolkanan"/>

        </LinearLayout>

    </LinearLayout>

    <!--Akhir Pesan-->

</LinearLayout>