<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Detail_Barang">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:outlineSpotShadowColor="@color/body">
                <ImageButton
                    android:id="@+id/ob2_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/tb_back"
                    android:background="@color/white"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:id="@+id/like_dt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/like"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="227dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/share_dt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/share"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="24dp"
                    android:clickable="true"/>
                <ImageView
                    android:id="@+id/dropdown_dt"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/menu"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="24dp"
                    android:clickable="true"/>
            </Toolbar>
            <ImageView
                android:layout_width="411dp"
                android:layout_height="262dp"
                android:src="@drawable/nasi"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Nasi Goreng"
                    android:fontFamily="@font/pmedium"
                    android:textSize="20sp"
                    android:textColor="@color/primary_text"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="203dp"
                    android:text="Bu Sri"
                    android:fontFamily="@font/pregular"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/map"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="Magelang Kota"
                    android:fontFamily="@font/pregular"
                    android:textSize="14sp"
                    android:textColor="@color/body"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Rp.8000"
                    android:fontFamily="@font/pmedium"
                    android:textSize="20sp"
                    android:textColor="@color/primary"/>
                <TextView
                    android:id="@+id/chatPenjual_dt"
                    android:layout_width="122dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="171dp"
                    android:background="@drawable/stroke_blue"
                    android:text="Chat Penjual"
                    android:fontFamily="@font/pregular"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:clickable="true"
                    android:gravity="center"/>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:background="@drawable/rounded">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tentang Produk"
                    android:fontFamily="@font/pregular"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="20dp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:src="@drawable/line_dt"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/bag"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Terjual"
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/body"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="46dp"
                    android:text="120/hari"
                    android:fontFamily="@font/pmedium"
                    android:textColor="@color/primary_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="143dp"
                        android:src="@drawable/medal"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Penilaian"
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/body"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="169dp"
                    android:text="4.5/5"
                    android:fontFamily="@font/pmedium"
                    android:textColor="@color/primary_text"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="275dp"
                        android:src="@drawable/quote"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Ulasan"
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/body"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="301dp"
                    android:text="900 Ulasan"
                    android:fontFamily="@font/pmedium"
                    android:textColor="@color/primary_text"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="411dp"
                android:layout_height="81dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="30dp"
                        android:text="Rincian Produk"
                        android:fontFamily="@font/pregular"
                        android:textSize="14sp"
                        android:textColor="@color/primary_text"/>
                    <TextView
                        android:layout_width="371dp"
                        android:layout_height="36dp"
                        android:layout_marginTop="37dp"
                        android:layout_marginLeft="20dp"
                        android:text="Kupat tahu magelangan BU Sri memiliki cita rasa yang unik dan khas. Berdiri sejak Tahun 2007.."
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/body"/>
                    <TextView
                        android:id="@+id/baca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="53dp"
                        android:layout_marginLeft="240dp"
                        android:text="Baca Selengkapnya"
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/primary"
                        android:clickable="true"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="411dp"
                android:layout_height="81dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:text="Ongkos Kirim"
                    android:fontFamily="@font/pregular"
                    android:textSize="14sp"
                    android:textColor="@color/primary_text"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="37dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/takeaway"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Rp2000-Rp5000"
                        android:fontFamily="@font/pregular"
                        android:textSize="12sp"
                        android:textColor="@color/body"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="411dp"
                android:layout_height="80dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded">
                <ImageView
                    android:id="@+id/message_dt"
                    android:clickable="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="22dp"
                    android:src="@drawable/message"/>
                <TextView
                    android:layout_width="105dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="145dp"
                    android:background="@drawable/stroke_blue"
                    android:text="Keranjang"
                    android:fontFamily="@font/pregular"
                    android:textSize="14sp"
                    android:textColor="@color/primary"
                    android:clickable="true"
                    android:gravity="center"/>
                <Button
                    android:id="@+id/beli_db"
                    android:layout_width="129dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="262dp"
                    android:background="@drawable/stroke_blue"
                    android:text="Beli"
                    android:fontFamily="@font/pmedium"
                    android:textSize="14sp"
                    android:textAllCaps="false"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>