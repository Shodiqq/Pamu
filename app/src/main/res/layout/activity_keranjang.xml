<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Keranjang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:outlineSpotShadowColor="@color/body">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:layout_marginLeft="20dp"
                android:text="Keranjang Saya"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary_text"
                android:textAlignment="center"/>
            <ImageView
                android:id="@+id/delete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="234dp"
                android:src="@drawable/delete"
                android:clickable="true"/>
        </Toolbar>
        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="122dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/checkbox"/>
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/nasi"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="142dp"
                android:text="Nasi Goreng"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="235dp"
                android:text="| Bu Sri"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/body"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="142dp"
                android:text="Rp8000"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="53dp"
                android:layout_marginLeft="302dp"
                android:src="@drawable/indeterminate"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="345dp"
                android:text="1"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="369dp"
                android:src="@drawable/plus"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="122dp"
            android:layout_marginTop="24dp">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/checkbox"/>
            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="60dp"
                android:src="@drawable/nasi"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="142dp"
                android:text="Senerek"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="205dp"
                android:text="| Bu Sri"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/body"/>
