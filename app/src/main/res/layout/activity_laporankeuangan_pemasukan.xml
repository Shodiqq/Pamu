<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    tools:context=".laporankeuangan_pemasukan">

    <!--    App bar top -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_back">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan Keuangan"
            android:fontFamily="@font/pmedium"
            android:textSize="16dp"
            android:textColor="@color/primary"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

    <!--    container -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/white"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pemasukan"
                android:textAllCaps="false"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:background="@drawable/rounded">
            </Button>

            <TextView
                android:id="@+id/pengeluaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Pengeluaran"
                android:layout_marginLeft="24dp"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:fontFamily="@font/pmedium"
                android:textSize="14sp"
                android:textColor="@color/primary"
                android:background="@drawable/stroke">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nominal Penjualan"
                android:fontFamily="@font/pregular"
                android:textSize="14sp"
                android:textColor="@color/body">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp7000.000"
                android:fontFamily="@font/pmedium"
                android:textSize="20sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/primary_text">
            </TextView>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Atur Transaksi"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:fontFamily="@font/pregular"
                    android:textColor="@color/body"/>

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/kalender">

                </ImageView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama Barang"
                    android:fontFamily="@font/pregular"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/body">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/stroke">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gethuk"
                    android:fontFamily="@font/pregular"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Barang"
                    android:fontFamily="@font/pregular"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/body">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/stroke">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 "
                    android:fontFamily="@font/pregular"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/dropdown"
                    android:layout_gravity="center">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satuan"
                    android:fontFamily="@font/pregular"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/body">

                </TextView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/stroke">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pcs "
                    android:fontFamily="@font/pregular"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="240dp"
                    android:src="@drawable/dropdown"
                    android:layout_gravity="center">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga Satuan"
                    android:fontFamily="@font/pregular"
                    android:textSize="12dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="13dp"
                    android:textColor="@color/body">

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="326dp"
                android:layout_height="53dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/stroke">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp 15.000"
                    android:fontFamily="@font/pregular"
                    android:textSize="12sp"
                    android:textColor="@color/primary_text"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">

                <TextView
                    android:layout_width="175dp"
                    android:layout_height="39dp"
                    android:text="Tambah Transaksi"
                    android:textAllCaps="false"
                    android:layout_marginTop="21dp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/pmedium"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:textColor="@color/primary"
                    android:background="@drawable/stroke_blue">
                </TextView>

                <Button
                    android:layout_width="175dp"
                    android:layout_height="39dp"
                    android:text="Simpan"
                    android:textAllCaps="false"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:fontFamily="@font/pmedium"
                    android:textSize="14sp"
                    android:background="@drawable/rounded">
                </Button>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>