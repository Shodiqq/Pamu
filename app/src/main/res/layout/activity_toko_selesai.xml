<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:layout_height="match_parent"
    tools:context=".TokoSelesai">

    <!--    App bar top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_back">
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selesai"
            android:fontFamily="@font/pmedium"
            android:textSize="16dp"
            android:textColor="@color/primary"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>
    <!--Akhir App Bar Top-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informasi Toko"
            android:fontFamily="@font/pregular"
            android:textSize="10sp"
            android:textColor="@color/body" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambah Produk"
            android:layout_marginLeft="24dp"
            android:fontFamily="@font/pregular"
            android:textSize="10sp"
            android:textColor="@color/body" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Selesai"
            android:fontFamily="@font/pmedium"
            android:textSize="10sp"
            android:textColor="@color/primary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        android:layout_marginStart="50dp">

        <ImageView
            android:layout_width="211dp"
            android:layout_height="16dp"
            android:src="@drawable/progress3"/>
    </LinearLayout>

    <!--Akhir Step Progress-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="284dp"
            android:layout_height="214dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/imagesselesai"/>

        <TextView
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:text="Selamat, Toko Anda Selesai Dibuat"
            android:fontFamily="@font/pmedium"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/primary_text"/>

        <Button
            android:id="@+id/bck_beranda"
            android:layout_width="324dp"
            android:layout_height="53dp"
            android:text="Kembali Ke Beranda"
            android:textAllCaps="false"
            android:layout_marginTop="150dp"
            android:fontFamily="@font/pmedium"
            android:textSize="14sp"
            android:background="@drawable/rounded">

        </Button>

    </LinearLayout>

</LinearLayout>