<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Registrasi">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:outlineSpotShadowColor="@color/body">
            <ImageButton
                android:id="@+id/regist_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/tb_back"
                android:background="@color/white"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:text="Kembali"
                android:fontFamily="@font/pmedium"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:textAlignment="center"/>
        </Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="32dp"
            android:text="Ayo kita mulai"
            android:fontFamily="@font/pregular"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="16dp"
            android:text="Registrasi akun anda untuk mendapatkan semua fitur"
            android:fontFamily="@font/pregular"
            android:textSize="12sp"
            android:layout_gravity="center"/>

        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="53dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/profile"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:hint="Nama Lengkap"
                    android:textSize="12sp"
                    android:fontFamily="@font/pmedium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="53dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/mail"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:hint="Masukan Email anda"
                    android:textSize="12sp"
                    android:fontFamily="@font/pmedium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="53dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/phone"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:text="+62"
                    android:fontFamily="@font/pmedium"
                    android:textSize="12sp"
                    android:textColor="@color/body"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/line"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/pmedium"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="53dp"
            android:background="@drawable/rounded"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/key"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"/>

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="16dp"
                    android:hint="Kata Sandi"
                    android:textSize="12sp"
                    android:fontFamily="@font/pmedium"
                    android:inputType="textPassword"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/reg_daftar"
            android:layout_width="369dp"
            android:layout_height="53dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner"
            android:text="Daftar"
            android:fontFamily="@font/pmedium"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginLeft="91dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pregular"
                android:text="Sudah mempunyai akun? "
                android:textColor="@color/body"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/btn_daftar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/pregular"
                android:text=" Masuk"
                android:textColor="@color/primary"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>